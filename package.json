{
  "name": "serverless-localstack-monorepo",
  "version": "0.0.1",
  "description": "A monorepo serverless development environment using localstack",
  "private": true,
  "license": "MIT",
  "workspaces": {
    "packages": [
      "packages/infra/*",
      "packages/modules/*",
      "packages/utils/*",
      "packages/workflows/*"
    ]
  },
  "scripts": {
    "clean": "lerna run clean && rm -rf node_modules",
    "lint": "eslint --ext .js --ext .ts .",
    "format": "eslint --ext .js --ext .ts --fix .",
    "local:up": "env $(cat .conf) localstack start",
    "local:build": "lerna run local:build",
    "local:watch": "lerna run local:watch --stream --parallel",
    "local:deploy": "lerna run local:deploy",
    "local:remove": "lerna run local:remove",
    "local:dev": "yarn local:build && yarn local:up && yarn local:deploy && yarn local:watch"
  },
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/preset-env": "^7.8.4",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/aws-lambda": "^8.10.40",
    "@types/node": "^13.7.0",
    "@typescript-eslint/eslint-plugin": "^2.19.2",
    "@typescript-eslint/parser": "^2.19.2",
    "babel-loader": "^8.0.6",
    "cache-loader": "^4.1.0",
    "chokidar-cli": "^2.1.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jest": "^23.7.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^5.0.1",
    "eslint-plugin-unicorn": "^16.1.1",
    "fork-ts-checker-webpack-plugin": "^4.0.3",
    "husky": "^4.2.3",
    "lerna": "^3.20.2",
    "prettier": "^1.19.1",
    "serverless": "^1.63.0",
    "serverless-localstack": "^0.4.24",
    "serverless-webpack": "^5.3.1",
    "ts-loader": "^6.2.1",
    "typescript": "^3.7.5",
    "webpack": "^4.41.5",
    "webpack-node-externals": "^1.7.2"
  },
  "dependencies": {
    "aws-sdk": "^2.613.0"
  }
}
